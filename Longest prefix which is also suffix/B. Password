#include<iostream>
#define ll long long int
using namespace std;
int main()
{
    string str;
    cin>>str;
    ll n=str.size();
    ll lps[n];
    lps[0]=0;
    ll len=0;
    ll i=1;
    while(i<n)
    {
        if(str[i]==str[len])
        {
            len++;
            lps[i]=len;
            i++;
        }
        else
        {
            if(len==0)
            {
                lps[i]=0;
                i++;
            }
            else
            len=lps[len-1];
        }
    }
    ll ans=lps[n-1];
    if(ans==0)
    {
              cout<<"Just a legend"<<endl;
              return(0);
    }
    for(int i=1;i<n-1;i++)
    if(lps[i]==ans)
    {
           for(int i=0;i<ans;i++)
           cout<<str[i];
           cout<<endl;
           return(0);
    }
    if(lps[ans-1]!=0)
    {
        for(int i=0;i<lps[ans-1];i++)
        cout<<str[i];
        cout<<endl;
    }
    else
    cout<<"Just a legend"<<endl;
    return(0);
}
