//    Must solve question
//    question link:https://codeforces.com/problemset/problem/919/D

#include<iostream>
#include<vector>
#include<queue>
#define ll long long int
using namespace std;
ll max(ll a,ll b)
{
    if(a>b)
    return(a);
    else
    return(b);
}
int main()
{
    ll n,m;
    cin>>n>>m;
    vector<ll> v1[n+1];
    ll u,v;
    string str;
    cin>>str; 
    ll deg[n+1]={0};
    for(int i=0;i<m;i++)
    {
        cin>>u>>v;
        v1[u].push_back(v);
        deg[v]++;
    }
    ll dp[n+1][26];
    for(int i=0;i<=n;i++)
    for(int j=0;j<26;j++)
    dp[i][j]=0;
 
 
    queue<ll> q1;
    for(int i=1;i<=n;i++)
    if(deg[i]==0){
    q1.push(i);
    dp[i][str[i-1]-'a']=1;
    }
    ll count=0;
    while(!q1.empty())
    {
        ll t=q1.front();
        q1.pop();
        for(int i=0;i<v1[t].size();i++)
        {
            ll k1=v1[t][i];
            deg[k1]--;
            if(deg[k1]==0)
                q1.push(k1);
            for(int j=0;j<26;j++)
            dp[k1][j]=max(dp[k1][j],dp[t][j]+(str[k1-1]-'a' == j));
        }
        count++;
    }
    if(count!=n)
    cout<<-1<<endl;
    else
    {
        ll m1=0;
        for(int i=1;i<=n;i++)
        for(int j=0;j<26;j++)
        if(dp[i][j]>m1)
        m1=dp[i][j];
        cout<<m1<<endl;
    }
    return(0);
}
