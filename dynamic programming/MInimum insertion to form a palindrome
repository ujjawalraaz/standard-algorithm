

//qs link:https://practice.geeksforgeeks.org/problems/form-a-palindrome/0

#include<iostream>
#define ll long long int
using namespace std;
string str;
ll dp[50][50];
ll func(ll i,ll j)
{
    if(j<i)
    return(0);
    if(dp[i][j]!=-1)
    return(dp[i][j]);
    else{
    if(str[i]==str[j])
    return(dp[i][j]=func(i+1,j-1));
    else
    return(dp[i][j]=1+min(func(i,j-1),func(i+1,j)));
    }
}

int main()
{
    ll t;
    cin>>t;
    while(t--)
    {
        cin>>str;
        for(ll i=0;i<=str.size();i++)
        for(ll j=0;j<=str.size();j++)
        dp[i][j]=-1;
        ll res=func(0,str.size()-1);
        cout<<res<<endl;
    }
    return(0);
}
